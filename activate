#!/bin/bash

# Define the paths
CUSTOM_PYTHON_DIR="$(pwd)/MyPython"
VENV_DIR="$(pwd)/MyPythonEnv"

# Ensure Python is installed
if [ ! -f "$CUSTOM_PYTHON_DIR/bin/python3" ]; then
    echo "âŒ Error: Custom Python not found in $CUSTOM_PYTHON_DIR"
    echo "ğŸ‘‰ Run the install script first: ./install.sh"
    exit 1
fi

# Check if virtual environment already exists
if [ -d "$VENV_DIR" ]; then
    echo "âœ… Virtual environment already exists at $VENV_DIR"
    echo "ğŸ‘‰ To activate, run: source $VENV_DIR/bin/activate"
    exit 0
fi

# Create the virtual environment
echo "ğŸš€ Creating virtual environment in: $VENV_DIR"
"$CUSTOM_PYTHON_DIR/bin/python3" -m venv "$VENV_DIR"

echo "âœ… Virtual environment created."
echo "ğŸ‘‰ To activate, run: source $VENV_DIR/bin/activate"
